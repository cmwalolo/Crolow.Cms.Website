@using Crolow.Cms.Core.Components.PageElements
@using Crolow.Cms.Core.Models.ViewModel.Navigation
@model PaginationViewModel
@{
    var qs = Model.BaseQuery;
    string MakeUrl(int page) => "?" + qs + (string.IsNullOrEmpty(qs) ? "" : "&") + "Page=" + page;
}

<nav class="navigation" aria-label="Page navigation">
    <ul class="pagination">

        <!-- First -->
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a title="@Dictionary["#List.FirstPage"]" class="btn btn-primary page-link" href="@(Model.CurrentPage > 1 ? MakeUrl(1) : "#")" aria-label="First">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        <!-- Previous -->
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a title="@Dictionary["#List.PreviousPage"]" class="btn btn-primary page-link" href="@(Model.CurrentPage > 1 ? MakeUrl(Model.CurrentPage - 1) : "#")" aria-label="Previous">
                <span aria-hidden="true">&lt;</span>
            </a>
        </li>

        <!-- Page numbers -->
        @for (var i = Model.StartPage; i <= Model.EndPage; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="btn btn-primary page-link" href="@MakeUrl(i)">@i</a>
            </li>
        }

        <!-- Next -->
        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a title="@Dictionary["#List.NextPage"]" class="btn btn-primary page-link" href="@(Model.CurrentPage<Model.TotalPages? MakeUrl(Model.CurrentPage + 1) : "#")" aria-label="Next">
                <span aria-hidden="true">&gt;</span>
            </a>
        </li>

        <!-- Last -->
        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a title="@Dictionary["#List.LastPage"]" class="btn btn-primary page-link" href="@(Model.CurrentPage<Model.TotalPages? MakeUrl(Model.TotalPages) : "#")" aria-label="Last">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>
